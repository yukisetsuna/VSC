<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_2"
    tools:context=".MainA">

    <Button
        android:id="@+id/xaaa1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/next"
        android:textSize="30sp" />

    <RadioGroup
        android:id="@+id/xaaa2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp">

        <RadioButton
            android:id="@+id/xaaa21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_purple"
            android:padding="10dp"
            android:text="Is it Ture or is it False?"
            android:textAlignment="center"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/xaaa22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_plie"
            android:padding="10dp"
            android:text="Can You Identify Me?"
            android:textAlignment="center"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/xaaa23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_plies"
            android:padding="10dp"
            android:text="How Strong is Your Vocabulary?"
            android:textAlignment="center"
            android:textSize="30sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/xaaa3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/select_subject"
        android:textColor="#000"
        android:textSize="30sp"
        android:textAlignment="center" />

</RelativeLayout>
